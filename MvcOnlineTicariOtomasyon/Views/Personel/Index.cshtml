@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Personel Listeleme Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th> ID</th>
        <th> Personel Adı</th>
        <th> Personel Soyadı</th>
        <th> Görsel</th>
        <th> Departman</th>
        <th> Güncelle</th>
        <th> Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.PersonelId</td>
            <td> @item.PersonelAd</td>
            <td> @item.PersonelSoyad</td>
            <td> <img src="@item.PersonelGorsel" style="width:100px; height:60px;" /></td>
            <td> @item.departman.DepartmanAd</td>
            <td> <a href="/Personel/PersonelGuncelle/@item.PersonelId" class="btn btn-success">Güncelle</a> </td>
            <td> <a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-warning">Detaylar</a> </td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Personel Ekle</a>

