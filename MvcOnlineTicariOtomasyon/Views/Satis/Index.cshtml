@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Satış Sayfası</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th> Id</th>
            <th> Ürün</th>
            <th> Cari</th>
            <th> Personel</th>
            <th> Adet</th>
            <th> Fiyat</th>
            <th> Toplam Tutar</th>
            <th> Tarih</th>
            <th> Güncelle</th>
            <th> Detaylar</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisHareketId</td>
            <td>@item.urunler.UrunAd</td>
            <td>@item.cariler.CariAd @item.cariler.CariSoyad</td>
            <td>@item.personel.PersonelAd @item.personel.PersonelSoyad</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
            <td><a href="/Satis/SatisGetir/@item.SatisHareketId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@item.SatisHareketId" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }

</table>

<a href="/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Yap</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>


<link href="https://cdn.datatables.net/responsive/2.2.7/css/responsive.dataTables.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/responsive/2.2.7/js/dataTables.responsive.min.js"></script>
<script>

    $('#tbl1').dataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
    });

</script>


