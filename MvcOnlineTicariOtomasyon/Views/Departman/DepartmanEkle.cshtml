@model MvcOnlineTicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Departman Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Departman Adı")
    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
    <br />
    <button class="btn" style="background: linear-gradient(to right, #ff416c, #ff4b2b); color: white; transition: background-position 0.4s ease; background-size: 200% 100%;"
   onmouseover="this.style.backgroundPosition='right center'"
   onmouseout="this.style.backgroundPosition='left center'">
    Departman Ekle</button>
</form>

