@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kargo Listeleme Sayfası</h2>

@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}


<br />
<table class="table table-bordered">
    <tr>
        <th> Personel </th>
        <th> Alıcı</th>
        <th> Tarih</th>
        <th> Takip Kodu</th>
        <th> Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Personel</td>
            <td> @item.Alıcı</td>
            <td> @item.TakipKodu</td>
            <td> @item.Tarih</td>
            <td>
                <a href="/Kargo/KargoTakip/@item.TakipKodu" class="btn" style="background-color: black; color: cyan; border: 2px solid cyan; box-shadow: 0 0 8px ;">
                    Detaylar
                </a>
            </td>


        </tr>
    }

</table>
<a href="/Kargo/YeniKargo/" class="btn" style="background: linear-gradient(to right, #ff416c, #ff4b2b); color: white; transition: background-position 0.4s ease; background-size: 200% 100%;"
   onmouseover="this.style.backgroundPosition='right center'"
   onmouseout="this.style.backgroundPosition='left center'">
    Yeni Kargo Ekle
</a>
